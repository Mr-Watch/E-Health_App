<Page
    x:Class="AllThingsHealth.Views.resultpage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AllThingsHealth.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Page.Resources>
        <DataTemplate x:Key="MedicineTemplate"                             >
            <TextBlock x:ConnectionId='16'                                  Margin="0,5,0,5" />
        </DataTemplate>
        <DataTemplate x:Key="PharmacyTemplate"                             >
            <RelativePanel x:ConnectionId='10' Width="300">
                <TextBlock x:ConnectionId='11' Name="Name"                                  Margin="0,5,0,5" />
                <TextBlock x:ConnectionId='12' Name="Address"                         RelativePanel.Below="Name"             Margin="0,5,0,5" />
                <TextBlock x:ConnectionId='13' Name="Lon"                           RelativePanel.AlignRightWithPanel="True"              Margin="0,5,0,5" />
                <TextBlock Text="Lon:" RelativePanel.LeftOf="Lon" Margin="0,5,0,5" />
                <TextBlock x:ConnectionId='14' Name="Lat"                          RelativePanel.AlignRightWithPanel="True"             RelativePanel.AlignVerticalCenterWith="Address" Margin="0,5,0,5" />
                <TextBlock Text="Lat:" RelativePanel.LeftOf="Lat" RelativePanel.AlignVerticalCenterWith="Lat" Margin="0,5,0,5" />
            </RelativePanel>
        </DataTemplate>
        <DataTemplate x:Key="DoctorTemplate"                           >
            <RelativePanel x:ConnectionId='3' Width="300">
                <TextBlock x:ConnectionId='4' Name="Name"                                  Margin="0,5,0,5" />
                <TextBlock x:ConnectionId='5' Name="Address"                         RelativePanel.Below="Name"             Margin="0,5,0,5" />
                <TextBlock x:ConnectionId='6' Name="Lon"                           RelativePanel.AlignRightWithPanel="True"              Margin="0,5,0,5" />
                <TextBlock Text="Lon:" RelativePanel.LeftOf="Lon" Margin="0,5,0,5" />
                <TextBlock x:ConnectionId='7' Name="Lat"                          RelativePanel.AlignRightWithPanel="True"             RelativePanel.AlignVerticalCenterWith="Address" Margin="0,5,0,5" />
                <TextBlock Text="Lat:" RelativePanel.LeftOf="Lat" RelativePanel.AlignVerticalCenterWith="Lat" Margin="0,5,0,5" />
                <TextBlock x:ConnectionId='8' Name="Spec"                      RelativePanel.Below="Address"             Margin="0,5,0,5" />
            </RelativePanel>
        </DataTemplate>
    </Page.Resources>
    <Pivot Title="Results" Margin="0,0,0,0">
        <PivotItem Header="Disease Info">
            <StackPanel Orientation="Vertical">
                <TextBlock x:ConnectionId='20' x:Name="illness_name"  Text="illness_name" TextWrapping="Wrap" Height="40" Width="301" FontSize="24" />
                <TextBlock x:ConnectionId='21' x:Name="doctror_text_Copy"  Text="Description" TextWrapping="Wrap" Height="46" Width="402" FontSize="36" TextAlignment="Center"/>
                <TextBlock x:ConnectionId='22' x:Name="info" Text="info" TextWrapping="Wrap" />
            </StackPanel>
        </PivotItem>
        <PivotItem Header="Medicine">
            <StackPanel HorizontalAlignment="Left">
                <TextBlock HorizontalAlignment="Center" Text="Medicine list" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="36" TextAlignment="Center"/>
                <ListView x:ConnectionId='19' x:Name="medicine_list" ItemTemplate="{StaticResource MedicineTemplate}" BorderThickness="2" Margin="0,0,0,0" BorderBrush="Black" Height="500" Width="183"/>
                <Button Content="Near medicine(?)" Margin="0,10,0,0" VerticalAlignment="Top" Height="46" Width="260" FontSize="22"/>
            </StackPanel>
        </PivotItem>
        <PivotItem Header="Pharmacies">
            <StackPanel HorizontalAlignment="Left">
                <TextBlock HorizontalAlignment="Center" Text="Pharmacy list" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="36" TextAlignment="Center"/>
                <ListView x:ConnectionId='18' x:Name="pharmacy_list" ItemTemplate="{StaticResource PharmacyTemplate}" BorderThickness="2" Margin="0,0,0,0" BorderBrush="Black" Height="500" />
                <Button Content="Near Pharmacies" Margin="0,10,0,0" VerticalAlignment="Top" Height="46" Width="260" FontSize="22"/>
            </StackPanel>
        </PivotItem>
        <PivotItem Header="Doctors">
            <StackPanel HorizontalAlignment="Left">
                <TextBlock HorizontalAlignment="Center" Text="Doctor list" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="36" TextAlignment="Center"/>
                <ListView x:ConnectionId='17' x:Name="doctor_list" ItemTemplate="{StaticResource DoctorTemplate}" BorderThickness="2" Margin="0,0,0,0" BorderBrush="Black" Height="500"/>
                <Button Content="Near doctors" Margin="0,10,0,0" VerticalAlignment="Top" Height="46" Width="260" FontSize="22"/>
            </StackPanel>
        </PivotItem>
    </Pivot>
</Page>

